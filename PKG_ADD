MYPACKAGE='pdsit';
VERSION='1.0.0';


desc=pkg('list','pdsit');
if (max(size(desc))==0)
	path_pfx = [pkg('prefix'),filesep,MYPACKAGE,'-',VERSION];
else
	path_pfx = getfield(desc{1},'dir');
end

parts={'basics','ceo','omega'};

for k=1:length(parts)
	addpath([path_pfx,filesep,'pdsit',filesep,parts{k}]);
end
